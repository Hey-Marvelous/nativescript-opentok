{
	"name": "nativescript-opentok",
	"version": "1.0.0",
	"description": "Integrates OpenTok for NativeScript.",
	"main": "opentok.js",
	"nativescript": {
		"platforms": {
			"android": "2.0.0",
			"ios": "2.0.0"
		}
	},
	"scripts": {
		"build": "tsc",
		"demo.ios": "npm run preparedemo && cd demo && tns emulate ios",
		"demo.android": "npm run preparedemo && cd demo && tns run android",
		"preparedemo": "npm run build && cd demo && tns plugin remove nativescript-yourplugin && tns plugin add .. && tns install",
		"setup": "cd demo && npm install && cd .. && npm run build && cd demo && tns plugin add .. && cd .."
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sean-perkins/nativescript-opentok.git"
	},
	"keywords": [
		"NativeScript",
		"OpenTok",
		"JavaScript",
		"Android",
		"iOS"
	],
	"author": {
		"name": "Sean Perkins",
		"email": "sean@meetmaestro.com.com"
	},
	"bugs": {
		"url": "https://github.com/sean-perkins/nativescript-opentok/issues"
	},
	"license": {
		"type": "MIT",
		"url": "https://github.com/sean-perkins/nativescript-opentok/blob/master/LICENSE"
	},
	"homepage": "https://github.com/sean-perkins/nativescript-opentok",
	"readmeFilename": "README.md",
	"devDependencies": {
		"typescript": "^1.8.10"
	}
}