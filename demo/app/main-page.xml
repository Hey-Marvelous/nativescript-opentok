<Page
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:OT="nativescript-opentok" loaded="pageLoaded">
    <GridLayout rows="*,auto,auto">
        <GridLayout>
            <OT:TNSOTPublisher id="publisher" loaded="publisherLoaded" session="{{ session }}" api="{{ api }}" token="{{ publisherToken2 }}"></OT:TNSOTPublisher>
            <!--<OT:TNSOTSubscriber loaded="subscriberLoaded" session="{{ session }}" api="{{ api }}" token="{{ subscriberToken }}" verticalAlignment="top" horizontalAlignment="right" margin="30" width="150" height="200"></OT:TNSOTSubscriber>-->
        </GridLayout>

        <StackLayout backgroundColor="white" height="50">
            <StackLayout orientation="horizontal">
                <Button text="Switch Camera" tap="{{ switchCamera }}" />
                <Button text="Toggle Camera" tap="{{ toggleVideo }}" />
                <Button text="Toggle Mute" tap="{{ toggleMute }}" />
            </StackLayout>
        </StackLayout>
    </GridLayout>
</Page>