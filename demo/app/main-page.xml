<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" xmlns:ot="nativescript-opentok" actionBarHidden="true">
    <StackLayout id="sl">
        <GridLayout columns="*,*, auto" rows="auto, *">
            <StackLayout id="publisherContainer" orientation="vertical" col="0">
                <Label text="OpenTok Publisher" class="message" textWrap="true"/>
                <ot:TNSOTPublisher height="300"  session="{{session}}" id="otPub"></ot:TNSOTPublisher>
                <Button text="Init Publisher" tap="{{ initPublisher }}" />
                <Button text="Toggle Publisher Video" tap="togglePublisherVideo" />
                <Button text="Toggle Publisher Audio" tap="togglePublisherAudio" />
                <Button text="Cycle Publisher Camera" tap="cyclePublisherCamera" />
            </StackLayout>
            <StackLayout id="subscriberContainer" orientation="vertical" col="1">
                <Label text="OpenTok Subscriber" class="message" textWrap="true"/>
                <ot:TNSOTSubscriber height="300"  session="{{session}}" id="otSub"></ot:TNSOTSubscriber>
                <Button text="Init Subscriber" tap="{{ initSubscriber }}" />
                <Button text="Toggle Subscriber Video" tap="toggleSubscriberVideo" />
                <Button text="Toggle Subscriber Audio" tap="toggleSubscriberAudio" />
                <Button text="Cycle Subscriber Camera" tap="cycleSubscriberCamera" />
            </StackLayout>
        </GridLayout>
    </StackLayout>
</Page>
